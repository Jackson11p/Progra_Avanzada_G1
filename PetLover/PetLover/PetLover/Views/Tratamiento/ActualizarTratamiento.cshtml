@model PetLover.BaseDatos.Tratamiento
@{
    ViewBag.Title = "ActualizarDatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3 col-md-2"></div>
    <div class="col-lg-6 col-md-8">

        <div class="Margen"></div>
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Actualizar Tratamiento</h1>
        </div>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-warning msjCentrado">
                @ViewBag.Mensaje
            </div>
        }

        @using (Html.BeginForm("ActualizarTratamiento", "Tratamiento"))
        {
            @Html.HiddenFor(x => x.TratamientoID)
            <div class="form-group">
                Nombre
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control form-control-user", @Required = "true" })
            </div>
            <div class="form-group">
                Descripcion
                @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control form-control-user", @Required = "true" })
            </div>
            <div class="form-group">
                Costo
                @Html.TextBoxFor(x => x.Costo, new { @class = "form-control form-control-user", @Required = "true", @type = "number", @min = "0" })
            </div>
            <div class="form-check form-group">
                @Html.CheckBoxFor(x => x.Estado, new { @class = "form-check-input" })
                @Html.LabelFor(x => x.Estado, new { @class = "form-check-label" })
            </div>
            <div style="text-align: right; width: 200px">
                <input type="submit" class="btn btn-danger btn-user btn-block" value="Procesar">
            </div>
        }
        <div style="margin-bottom: 50px;"></div>
    </div>
</div>
<div class="Margen text-left">
    <a href="@Url.Action("ConsultarTratamientos", "Tratamiento")">
        <i class="fa fa-backward fa-2x"></i>
    </a>
</div>