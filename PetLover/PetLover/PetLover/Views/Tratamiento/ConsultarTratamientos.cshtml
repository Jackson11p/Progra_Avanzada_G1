@model List<PetLover.BaseDatos.ConsultarTratamientos_Result>

@{
    ViewBag.Title = "ConsultarOfertas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="Margen"></div>
    <h5 class="m-0 font-weight-bold text-primary">Mantenimiento de Mascotas</h5>

    <div class="Margen">
        <a class="btn btn-primary" href="@Url.Action("RegistrarTratamiento","Tratamiento")"> + Agregar</a>
    </div>

    <table id="example" class="table table-bordered table-hover">
        <thead>
            <tr>

                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Costo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Costo</td>
                    <td><a href="@Url.Action("ActualizarTratamiento","Tratamiento", new { q = item.TratamientoID })"><i class="fa fa-edit"></i></a></td>
                </tr>
            }

        </tbody>
    </table>

</div>

<script src="~/Templates/js/jquery.min.js"></script>
<script>

    $(document).ready(function () {

        var table = new DataTable('#example', {
            language: {
                url: '//cdn.datatables.net/plug-ins/2.2.2/i18n/es-ES.json',
            },
            columnDefs: [
                { "className": "dt-left", "targets": "_all" }
            ]
        });

    });

</script>
