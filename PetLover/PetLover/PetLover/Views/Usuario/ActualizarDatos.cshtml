@model PetLover.BaseDatos.Usuarios
@{
    ViewBag.Title = "ActualizarDatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3 col-md-2"></div>
    <div class="col-lg-6 col-md-8">

        <div class="Margen"></div>
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Actualizar Datos</h1>
        </div>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-warning msjCentrado">
                @ViewBag.Mensaje
            </div>
        }

        @using (Html.BeginForm("ActualizarDatos", "Usuario"))
        {
            <div class="form-group">
                Identificación
                @Html.TextBoxFor(x => x.Identificacion, new { @class = "form-control form-control-user", @Required = "true", @onkeyup = "ConsultarNombre();" })
            </div>
            <div class="form-group">
                Nombre
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control form-control-user", @Required = "true" })
            </div>
            <div class="form-group">
                Correo
                @Html.TextBoxFor(x => x.Correo, new { @class = "form-control form-control-user", @type = "Email", @Required = "true" })
            </div>
            <div class="form-group">
                Teléfono
                @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control form-control-user", @Required = "true" })
            </div>
            @Html.HiddenFor(x => x.Estado)
            @Html.HiddenFor(x => x.IdPerfil)
            <div style="text-align: right; width: 200px">
                <input type="submit" class="btn btn-danger btn-user btn-block" value="Procesar">
            </div>
        }
        <div style="margin-bottom: 50px;"></div>
    </div>
</div>
<div class="Margen text-left">
    <a href="@Url.Action("Index", "Principal")">
        <i class="fa fa-backward fa-2x"></i>
    </a>
</div>
<script src="~/Templates/js/generals.js"></script>

