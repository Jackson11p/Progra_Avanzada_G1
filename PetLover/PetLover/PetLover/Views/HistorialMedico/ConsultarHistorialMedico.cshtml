@model List<PetLover.Models.HistorialMedicoViewModel>


@{
    ViewBag.Title = "ConsultarHistorialMedico";
}

<div class="container-fluid">
    <div class="Margen"></div>
    <h5 class="m-0 font-weight-bold text-primary">Mantenimiento de Historial Medico</h5>
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @TempData["MensajeExito"]
        </div>
    }
    <div class="Margen">
        <a class="btn btn-primary" href="@Url.Action("RegistrarHistorialMedico","HistorialMedico")"> + Agregar</a>
    </div>

    <table id="example" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Mascota</th>
                <th>Veterinario</th>
                <th>Fecha</th>
                <th>Diagnostico</th>
                <th>Monto</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreMascota</td>
                    <td>@item.NombreVeterinario</td>
                    <td>@item.FechaCita</td>
                    <td>@item.Diagnostico</td>
                    <td>@item.MontoTotal</td>

                </tr>
            }

        </tbody>
    </table>

</div>
<script src="~/Templates/js/jquery.min.js"></script>
<script>

    $(document).ready(function () {

        var table = new DataTable('#example', {
            language: {
                url: '//cdn.datatables.net/plug-ins/2.2.2/i18n/es-ES.json',
            },
            columnDefs: [
                { "className": "dt-left", "targets": "_all" }
            ]
        });

    });

</script>
