@model PetLover.Models.UsuariosModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="row justify-content-center" style="margin-top:100px">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <img src="@Url.Content("~/Templates/img/carousel-1.jpg")"
                             class="img-fluid rounded"
                             alt="Imagen de inicio de sesión"
                             style="max-width: 90%; height: auto;">
                    </div>
                    <div class="col-lg-6">
                        <div class="p-5 shadow-lg rounded bg-white">
                            <div class="text-center">
                                <h1 class="h4 text-dark mb-4">Crear Cuenta</h1>
                            </div>

                            @using (Html.BeginForm("Register", "Principal"))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Identificacion, new { @class = "form-control form-control-user", @placeholder = "Identificación", @Required = "true", @onkeyup = "ConsultarNombre();" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control form-control-user", @placeholder = "Nombre", @Required = "true", @ReadOnly = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Correo, new { @class = "form-control form-control-user", @type = "Email", @placeholder = "Correo", @Required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control form-control-user", @placeholder = "Teléfono", @Required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Contrasenna, new { @class = "form-control form-control-user", @placeholder = "Contraseña", @type = "password", @Required = "true" })
                                </div>

                                <button type="submit" class="btn btn-warning btn-user btn-block" style="background-color: #F26822; border: none;">Procesar</button>
                            }

                            <hr>

                            <div class="text-center">
                                <a class="small text-dark" href="@Url.Action("ForgotPassword","Principal")">Recuperar Contraseña?</a>
                            </div>
                            <div class="text-center">
                                <a class="small text-dark" href="@Url.Action("Register","Principal")">Crear una cuenta!</a>
                            </div>
                            <div class="text-center">
                                <a class="small text-dark" href="@Url.Action("Index","Principal")">Pantalla Principal!</a>
                            </div>
                        </div>
                    </div>

                </div> 
            </div>
        </div>
    </div>
</div>
